@model Fttx_Orm.Models.fiber.Baglanti

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bağlanti Düzenle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BaglantiId)

        <div class="form-group" style="height:40px">
            @Html.LabelFor(model => model.BaglanitipId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.BaglanitipId, new { htmlAttributes = new { @class = "form-control" } })*@
                <link rel="stylesheet" href="~/Content/dropdown.css" />
                <script src="~/Scripts/dropdown.js" type="text/javascript"></script>
                <div tabindex="0" class="Jdropdown" style="z-index:4">
                    <div class="dropdown-a"></div>
                    @if (Model.BaglanitipId.ToString() == null)
                    {
                        <span>-- Seçiniz ! -- </span>
                    }
                    else
                    {
                        String itemID;
                        foreach (var item in ViewBag.BaglanitipId)
                        {
                            if (item.Value == Model.BaglanitipId.ToString())
                            {
                                <span>@item.Text</span>
                                itemID = item.Value;
                                break;
                            }
                        }

                    }
                    <input id="BaglanitipId" name="BaglanitipId" type="hidden" value="itemID.Tostring()" />
                    <input type="text" placeholder="Ara" /><i class="fa fa-search"></i>
                    <div class="options">

                        <ul>
                            <li>-- Seçiniz ! --</li>
                            @foreach (var item in ViewBag.BaglanitipId)
                            {
                                <li id="@item.Value" onclick="gonder(@item.Value)">@item.Text</li>
                            }

                        </ul>
                        <script>
                            function gonder(id) {
                                document.getElementById('BaglanitipId').value = id;
                            }

                        </script>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.BaglanitipId, "", new { @class = "text-danger", @style = "position:relative;top:31px;" })
            </div>
        </div>

        <div class="form-group" style="height:40px">
            @Html.LabelFor(model => model.OdfId, "OdfId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("OdfId", null, htmlAttributes: new { @class = "form-control" })*@
                <div tabindex="0" class="Jdropdown" style="z-index:3">
                    <div class="dropdown-a"></div>
                    @if (Model.OdfId.ToString() == null)
                    {
                        <span>-- Seçiniz ! -- </span>
                    }
                    else
                    {
                        <span>@Model.Odf.OdfAdi.ToString()</span>
                    }
                    <input id="OdfId" name="OdfId" type="hidden" value="@Model.Odf.OdfId.ToString()" />
                    <input type="text" placeholder="Ara" /><i class="fa fa-search"></i>
                    <div class="options">

                        <ul>
                            <li>-- Seçiniz ! --</li>
                            @foreach (var item in ViewBag.OdfId)
                            {
                                <li id="@item.Value" onclick="gonder2(@item.Value)">@item.Text</li>
                            }

                        </ul>
                        <script>
                            function gonder2(id) {
                                document.getElementById('OdfId').value = id;
                            }

                        </script>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.OdfId, "", new { @class = "text-danger", @style = "position:relative;top:31px;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BaglantiAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BaglantiAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BaglantiAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" onclick="javascript: $(this).hide(); $('#h').css('display', 'block')" />
                <span id="h" style="display:none; color:#666666"><i class="fa fa-refresh fa-spin"></i> &nbsp;<b>İşlem Yapılıyor ...</b></span>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("<< Geri dön", "Index")
</div>

