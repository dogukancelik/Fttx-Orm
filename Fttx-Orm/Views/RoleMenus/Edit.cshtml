@model Fttx_Orm.Models.RoleMenu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rol Menü Düzenle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RoleMenuId)

        <div class="form-group" style="height:40px">
            @Html.LabelFor(model => model.MenuId, "MenuId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("MenuId", null, htmlAttributes: new { @class = "form-control" })*@
                <link rel="stylesheet" href="~/Content/dropdown.css" />
                <script src="~/Scripts/dropdown.js" type="text/javascript"></script>
                <div tabindex="0" class="Jdropdown" style="z-index:4">
                    <div class="dropdown-a"></div>
                    <span>@Model.AllMenu.MenuName.ToString()</span>
                    <input id="MenuId" name="MenuId" type="hidden" value="@Model.AllMenu.MenuId.ToString()" />
                    <input type="text" placeholder="Ara" /><i class="fa fa-search"></i>
                    <div class="options">

                        <ul>
                            <li>-- Seçiniz ! --</li>
                            @foreach (var item in ViewBag.MenuId)
                            {
                                <li id="@item.Value" onclick="gonder(@item.Value)">@item.Text</li>
                            }

                        </ul>
                        <script>
                            function gonder(id) {
                                document.getElementById('MenuId').value = id;
                            }

                        </script>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.MenuId, "", new { @class = "text-danger", @style = "position:relative;top:31px;" })
            </div>
        </div>

        <div class="form-group" style="height:40px">
            @Html.LabelFor(model => model.RoleId, "RoleId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })*@
                <div tabindex="0" class="Jdropdown" style="z-index:3">
                    <div class="dropdown-a"></div>
                    <span>@Model.Role.RoleName.ToString()</span>
                    <input id="RoleId" name="RoleId" type="hidden" value="@Model.Role.RoleId.ToString()" />
                    <input type="text" placeholder="Ara" /><i class="fa fa-search"></i>
                    <div class="options">

                        <ul>
                            <li>-- Seçiniz ! --</li>
                            @foreach (var item in ViewBag.RoleId)
                            {
                                <li id="@item.Value" onclick="gonder2(@item.Value)">@item.Text</li>
                            }

                        </ul>
                        <script>
                            function gonder2(id) {
                                document.getElementById('RoleId').value = id;
                            }

                        </script>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger", @style = "position:relative;top:31px;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("<< Geri dön", "Index")
</div>

